<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:background="@drawable/background_jn">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noob alert"
        android:id="@+id/noob"
        android:layout_gravity="center|bottom|top"
        android:layout_marginTop="10dp"
        android:onClick="somNoob"
        android:background="#270e5b"
        android:textColor="#dbfff8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarado alert"
        android:id="@+id/tarado"
        android:layout_gravity="center|bottom|top"
        android:layout_marginTop="10dp"
        android:onClick="somTarado"
        android:background="#270e5b"
        android:textColor="#dbfff8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mentira alert"
        android:id="@+id/mentira"
        android:layout_gravity="center|bottom|top"
        android:layout_marginTop="10dp"
        android:onClick="somMentira"
        android:background="#270e5b"
        android:textColor="#dbfff8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masculinity alert"
        android:id="@+id/masculinity"
        android:layout_gravity="center|bottom|top"
        android:layout_marginTop="10dp"
        android:onClick="somMasc"
        android:background="#270e5b"
        android:textColor="#dbfff8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Funk (bonus)"
        android:id="@+id/funk"
        android:layout_gravity="center|bottom|top"
        android:layout_marginTop="10dp"
        android:onClick="somFunk"
        android:background="#270e5b"
        android:textColor="#dbfff8" />
</LinearLayout>
